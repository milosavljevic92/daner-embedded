           kanal1 = osvetljenje 
           kanal2 = 0
           kanal3 = 0 
           kanal4 = 0
        endif
        if kanal = 2 then
           kanal1 = 0 
           kanal2 = osvetljenje
           kanal3 = 0 
           kanal4 = 0
        endif
        if kanal = 3 then
           kanal1 = 0
