           kanal3 = osvetljenje
           kanal4 = 0
        endif
        if kanal = 4 then
           kanal1 = 0
           kanal2 = 0 
           kanal3 = 0 
           kanal4 = osvetljenje
        endif
     endif
     lcdout $fe,$c0,displej[1],dec2 sat,":",displej[2],dec2 minut," * ",displej[3],dec3 osvetljenje,"%             "
