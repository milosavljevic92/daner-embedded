             displej[1] = ">"
             displej[2] = " "
         
        case 2 
             displej[1] = " "
             displej[2] = ">"
     end select
       
     if tup = 0 then
         if kursor = 1 then
            decsaT = decsat + 1
            if decsat > 23 then decsat = 23
            pause 60
         endif
         
         if kursor = 2 then
            decmin = decmin + 1
            if decmin > 59 then decmin = 59
            pause 60
         endif
         
     endif
        
     if tdown = 0 then
         if kursor = 1 then
            decsaT = decsat - 1
            if decsat < 1 or decsat > 23 then decsat = 0
            pause 60
         endif
         
         if kursor = 2 then
            decmin = decmin - 1
            if decmin < 1 or decmin > 59 then decmin = 0   
