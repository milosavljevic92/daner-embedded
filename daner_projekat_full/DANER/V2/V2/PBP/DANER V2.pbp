       BezTastera =  BezTastera + 1 
       bcklight = 1
     else
        bcklight = 0 
     endif
                                                        
     if novostanjegore < starostanjegore then 
         BezTastera = 0
         if bcklight = 1 then 
            i = i + 1 
            if i >= 1 then 
               i = 0 
               meni = 0
               goto menu 
            endif
         endif
     ENDIF
   
