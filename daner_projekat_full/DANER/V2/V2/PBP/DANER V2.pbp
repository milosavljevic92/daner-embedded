Podesavanje:
     bcklight = 1
     novostanjelevo = tleft
     novostanjedesno = tright
     novostanjeGore= tup
     novostanjedole= tdown
     if novostanjedesno < starostanjedesno then
        x = x + 1 
        if x > 1 then 
           x = 0 
           Kursor =  Kursor + 1 
           if kursor > 3 then kursor = 1
        endif
     endif
 
     IF KURSOR = 1 THEN
        displej[1] = ">"
        displej[2] = " "
        displej[3] = " "
     endif 
     if kursor = 2 then
        displej[1] = " "
        displej[2] = ">"
        displej[3] = " "
     endif
     if kursor = 3 then 
        displej[1] = " "
        displej[2] = " "
        displej[3] = ">"
     endif
     if tup = 0 then
         if kursor = 1 then
            saT = sat + 1
            if sat > 23 then sat = 23
            write meni,sat
         endif
         
         if kursor = 2 then
            minut = minut + 1
            if minut > 59 then minut = 59
            write meni + 1,minut
         endif
         
         if kursor = 3 then
            osvetljenje = osvetljenje + 1 
            if osvetljenje > 100 then osvetljenje = 100
            write meni + 2,osvetljenje
         endif
        pause 60
     endif 
       
     if tdown = 0 then
         if kursor = 1 then
            saT = sat - 1
            if sat < 1 or sat > 23 then sat = 0
            write meni,sat
         endif
         
         if kursor = 2 then
            minut = minut - 1
            if minut < 1 or minut > 59 then minut = 0
            write meni + 1,minut
         endif
         
         if kursor = 3 then
            osvetljenje = osvetljenje - 1 
            if osvetljenje < 1 or osvetljenje > 100 then osvetljenje = 0
            write meni + 2,osvetljenje
         endif
         pause 60
     endif
     if sat   > 23 then sat   = 0
     if minut > 59 then minut = 0
     
     if osvetljenje > 100 then osvetljenje = 0
     if svitanje = 1 then 
        IF pali = 1 then
          Lcdout $fe, 2,"Sunrise #",#kanal,"  ON          "
        else
           Lcdout $fe, 2,"Sunrise #",#kanal,"  OFF        "
        endif
     else
        IF pali = 1 then
          Lcdout $fe, 2,"Sunset #",#kanal,"  ON          " 
